<!DOCTYPE html>
<html lang="PT-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css"/>
    <title>Perfil</title>
</head>
<body>
	<header>
        <div>
          <img class="logo img-fluid" src="/img/logo_SocialBlend.png"/>
        </div>
        <nav>
          <ul class="nav-list">
            <li><a href="/index">Início</a></li>
            <li><a href="/perfil">Perfil</a></li>
            <li><a href="/">Sair</a></li>
          </ul> 
        </nav>
    </header>
	<section class="perfil">
		<img src="/img/imagem_perfil.webp" alt="Imagem de perfil">

		<p><b>Nome:</b> <%= nomeUsuario %></p>
		<hr>
		<p><b>Email:</b> <%= emailUsuario %></p>
		<hr>
		<p><b>Data de nascimento:</b> <%= dataNasc %></p>
		<hr>

		<button id="editarPerfilBtn" class="btn btn-primary">Editar perfil</button>

		<form id="editarPerfilForm" style="display: none;" action="/atualizarperfil" method="POST">

			<div class="mb-3">
				<label for="emailUsuario" class="form-label">Email:</label>
				<input type="email" id="emailUsuario" name="emailUsuario" class="form-control" value="<%= emailUsuario %>">
			</div>

			<div class="mb-3">
				<label for="nomeUsuario" class="form-label">Nome:</label>
				<input type="text" id="nomeUsuario" name="nomeUsuario" class="form-control" value="<%= nomeUsuario %>">
			</div>

			<div class="mb-3">
				<label for="dataNasc" class="form-label">Data de nascimento:</label>
				<input type="date" id="dataNasc" name="dataNasc" class="form-control" value="<%= dataNasc %>">
			</div>

			<button type="submit" class="btn btn-primary">Salvar</button>
		</form>
	</section>

	<footer>
		<p>© 2023 Social Blend. Todos os direitos reservados.</p>
		<ul>
		  <li><a href="#">Política de privacidade</a></li>
		  <li><a href="#">Termos de uso</a></li>
		</ul>
	</footer>

	<script>
		const editarPerfilBtn = document.getElementById("editarPerfilBtn");
		const editarPerfilForm = document.getElementById("editarPerfilForm");

		editarPerfilBtn.addEventListener("click", () => {
			editarPerfilBtn.style.display = "none";
			editarPerfilForm.style.display = "block";
		});

		editarPerfilForm.addEventListener("submit", async (e) => {
			e.preventDefault();

			const nomeUsuario = document.getElementById("nomeUsuario").value;
			const emailUsuario = document.getElementById("emailUsuario").value;
			const dataNasc = document.getElementById("dataNasc").value;

			try {
				const response = await fetch("/atualizarperfil", {
					method: "POST",
					headers: {
						"Content-Type": "application/json",
					},
					body:({ nomeUsuario, emailUsuario, dataNasc }),
				});

				if (response.ok) {
					location.reload();
				} else {
					console.error("Erro ao atualizar perfil:", response.statusText);
				}
			} catch (err) {
				console.error("Erro ao atualizar perfil:", err);
			}
		});
	</script>
</body>
</html>
